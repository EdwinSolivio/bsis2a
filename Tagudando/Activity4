import java.util.Scanner;
public class activityfour {
    public static void main(String[] args) {
        Scanner temperature = new Scanner(System.in);

        int num1;
        double celsius, fahrenheit;
        System.out.println("Choose option. Press 1 for C->F. Press 2 for F->C:");
        num1 = temperature.nextInt();

        switch (num1) {
            case 1:
                System.out.print("Enter value: ");
                celsius = temperature.nextDouble();
                celsius= ((celsius*9)/5)+32;
                System.out.println("Value is: "+celsius);
                break;
            case 2:
                System.out.print("Enter value: ");
                fahrenheit = temperature.nextDouble();
                fahrenheit = (fahrenheit-32)* 5/9;
                System.out.println("Value is: "+fahrenheit);
                break;
        }
    }
}

